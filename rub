tv_show_characters = {

"Homer Simpson" => {name: "Homer Simpson",
         occupation: "Nuclear Safety Inspector", 
         hobbies: ["Watching TV", "Eating donuts"]},
"Jon Snow" => {name: "Jon Snow", 
       occupation: "King in the North", 
       hobbies: ["Fighting white walker", "Knowing nothing"]
       },
"Mr. Roger" => {name: "Mr. Roger", 
        occupation: "Neighbor",
        hobbies: ["Making children feel loved and appreciated",
        "Singing songs"]}
}

p tv_show_characters["Homer Simpson"]
puts""

p tv_show_characters["Jon Snow"][:occupation]

p tv_show_characters["Mr. Roger"][:hobbies][1]









  
  